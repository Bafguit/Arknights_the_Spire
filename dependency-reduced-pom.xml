<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.ndc</groupId>
  <artifactId>arknights-the-spire</artifactId>
  <name>Arknights the Spire</name>
  <version>1.0.13</version>
  <description>Slay the Spire mod with Arknights Dokutah</description>
  <build>
    <finalName>ArknightsTheSpire</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.2</version>
        <executions>
          <execution>
            <id>arknights-the-spire</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>com.ndc:arknights-the-spire</artifact>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <copy />
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.megacrit.cardcrawl</groupId>
      <artifactId>slaythespire</artifactId>
      <version>017</version>
      <scope>system</scope>
      <systemPath>${Steam.path}/common/SlayTheSpire/desktop-1.0.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.evacipated.cardcrawl</groupId>
      <artifactId>ModTheSpire</artifactId>
      <version>2.7.0</version>
      <scope>system</scope>
      <systemPath>${Steam.path}/workshop/content/646570/1605060445/ModTheSpire.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.evacipated.cardcrawl</groupId>
      <artifactId>BaseMod</artifactId>
      <version>2.14.0</version>
      <scope>system</scope>
      <systemPath>${Steam.path}/workshop/content/646570/1605833019/BaseMod.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.evacipated.cardcrawl.mod</groupId>
      <artifactId>StSLib</artifactId>
      <version>1.10.0</version>
      <scope>system</scope>
      <systemPath>${Steam.path}/workshop/content/646570/1609158507/StSLib.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>actlikeit</groupId>
      <artifactId>ActLikeIt</artifactId>
      <version>1.10.0</version>
      <scope>system</scope>
      <systemPath>${Steam.path}/workshop/content/646570/1934902042/actlikeit.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <Steam.path>C:\Program Files (x86)\Steam\steamapps\</Steam.path>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
</project>

